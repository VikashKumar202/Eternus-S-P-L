@model WebAPIFinalFianl.Models.Employee

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<table>
    <tr>
        <td><strong>Enter Employee ID to Delete Record</strong></td>
        <td><input type="text" id="employeeId"></td>
    </tr>
    <tr>
        <td><button onclick="myfunction()">Delete</button></td>
    </tr>

</table>



<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
<script>
function myfunction()
{

    var id;
    id= $("#employeeId").val();
  


       $.ajax({
           url: 'http://localhost:62149/api/Employees/' + $("#employeeId").val(),
            type: 'DELETE',
            data: JSON.stringify(id),
            async: true,
            dataType: 'int',
            contentType: 'application/json; charset=utf-8',
            error: function (xhr) {
                alert('Error: ' + xhr.statusText);
            },
            success: function (result) {
                CheckIfInvoiceFound(result);
            },
            async: true,
            processData: false
        });


}

</script>


<div>
    @Html.ActionLink("Back to Main menu", "MainView")
</div>
